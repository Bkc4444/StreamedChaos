@page
@model Streamed_Chaos.Pages.DeleteModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Playlist</h4>
    <hr />
    <dl class="row">
        <!--This is the display name for what column name is-->
        <dt class="col-sm-2">
            <label>Channel Name</label>
        </dt>
        <!--This is the display name for what user inputed-->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserPlaylist.ChannelName)
        </dd>
        <dt class="col-sm-2">
            <label>Channel Id</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserPlaylist.ChannelId)
        </dd>
        <dt class="col-sm-2">
            <label>Playlist Id</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserPlaylist.PlaylistId)
        </dd>
        <dt class="col-sm-2">
            <label>Playlist Link</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserPlaylist.PlaylistLink)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="UserPlaylist.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-page="./Index">Back to List</a>
    </form>
</div>
